<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CreateNewDeviceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/modify" />
        <EditText
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:id="@+id/txtModifyDeviceName"
            android:layout_width="350sp"
            android:layout_height="30dp"
            android:inputType="text"
            android:hint="Device Name"
            android:textAlignment="center"
            android:singleLine="true" />
        <EditText
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:id="@+id/txtModifyDevicePrice"
            android:layout_width="350sp"
            android:layout_height="30dp"
            android:inputType="text"
            android:hint="Price"
            android:textAlignment="center"
            android:singleLine="true" />
        <EditText
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:id="@+id/txtModifyDevicePictureURL"
            android:layout_width="350sp"
            android:layout_height="30dp"
            android:inputType="text"
            android:hint="Picture URL"
            android:textAlignment="center"
            android:singleLine="true" />
        <EditText
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:id="@+id/txtModifyDeviceDescription"
            android:layout_width="350sp"
            android:layout_height="140dp"
            android:inputType="textMultiLine"
            android:hint="Description"
            android:textAlignment="center"
            android:singleLine="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="17sp"/>
            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/spinner"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/modifyDeviceCategorySpinner"
                android:layout_width="270dp"
                android:layout_height="30dp">
            </Spinner>

        </LinearLayout>

        <Button
            android:id="@+id/btnModifyDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D6414F"
            android:fontFamily="@font/bold"
            android:shadowDy="@android:integer/config_longAnimTime"
            android:text="Save"
            android:textSize="20sp"
            app:cornerRadius="25dp" />
    </LinearLayout>

</LinearLayout>